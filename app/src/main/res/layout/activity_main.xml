<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.charlie.acercade.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:background="#00BCD4"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:scaleY="1.2"
            android:scaleX="1.2"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Carlos Beltrán"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="#FEFFFF"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingeniería Informática"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#FEFFFF" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/face"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/face"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="charlie.bltrn"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="12dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/github" />

            <TextView
                android:id="@+id/git"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="CarlosBeltranP"
                android:textColor="#000"
                android:textSize="16dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/whatsapp"
                android:layout_gravity="center"/>
            <TextView
                android:id="@+id/ws"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="7675 1821"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:textColor="#000"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/gmail"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/gm"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="carlos.ebponce@gmail.com"
                android:gravity="center"
                android:textSize="16dp"
                android:layout_marginTop="10dp"
                android:textColor="#000"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:padding="8dp">

        <Button
            android:id="@+id/botonShare"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:textSize="15dp"
            android:text="Share"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:onClick="procesos"
            android:background="@color/colorPrimary"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:text="Power by Charlie´s Apps"
            android:gravity="center"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>
